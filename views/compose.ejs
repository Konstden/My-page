<%- include('partials/header') -%> 
    <h1>Compose</h1>
    <form action="/compose" method="post">
        <div class="form-group">
            <label for="title">Title</label>
            <input class="form-control" type="text" name="postTitle" placeholder="New item">
        </div>
        <div class="form-group">
            <label for="postExample">Post</label>
            <textarea class="form-control" name="postBody" cols="30" rows="10"></textarea>

        <button type="submit" class="btn btn-primary mb-2">Publish</button>
    </form>
        
<%- include('partials/footer') -%>  